<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

   <!-- external CSS link -->
  <link rel="stylesheet" href="styles/reset.css">
  <link rel="stylesheet" href="styles/normalize.css">
  <link rel="stylesheet" href="styles/styles.css">
  <style>
    #chatform { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
    #chatform input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
    #chatform button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }
  </style>
  <!-- font -->
  <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Inconsolata|Lato|News+Cycle" rel="stylesheet">

  <title>Project Page</title>

</head>
<body class="Site">

  <div class="whole-page-container Site-content">
    <header class="clearfix">
      <nav>
        <a href="login" class="log-out"><img src="images/iconmonstr-log-out-9-32.png"/></a>
      </nav>
      <span class="logo"><a href="portal">Gyaza</a></span>
      <h1>Users's Projects</h1>
    </header>

  <div class="tabs">
    <nav>
      <ul>
        <li class="tab-current"><a href="portal">Current</a></li>
        <li class="tab-current"><a href="portal">Complete</a></li>
        <li class="tab-current"><a href="portal">Pending</a></li>
      </ul>
    </nav>

    <div class="chat-goals-container">

        <section class="chat">
          <div>
            <img src="images/iconmonstr-speech-bubble-28-120.png" alt="chat"/>
            <h3>Chat Room</h3>
            <ul id="messages"></ul>
            <form id='chatform' action="">
              <input id="m" autocomplete="off" /><button>Send</button>
            </form>

          </div>
        </section>
        <section class="goals">
          <div class="myDIV" id="myGoals">
            <h3>Goals:</h3>
              <input type="text" id="myInput" placeholder="Title...">
              <span onclick="newElement()" class="addBtn">Add</span>
            </div>
            <ul id="myUL">
            </ul>
        </section>

    </div><!--end of content-->
  </div> <!--end of tabs-container-->
</div> <!--end of whole-page-container-->
<!-- <div class="push"></div> -->
<footer class="clearfix">Made by: GerBear, CareBear, and SofaBear</footer>

<!--APPLICATION SCRIPTS-->
<!-- Add jQuery library -->
<script type="application/javascript" src="http://code.jquery.com/jquery-2.2.3.min.js"></script>
<script src="scripts/goals-script.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
$(function () {
  var socket = io();
  $('#chatform').submit(function(){
    socket.emit('chat message', $('#m').val());
    $('#m').val('');
    return false;
  });
  socket.on('chat message', function(msg){
    $('#messages').append($('<li>').text(msg));
  });
});
</script>
</body>
</html>
